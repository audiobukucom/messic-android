<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="events"
            type="org.messic.android.smarttv.activities.login.LoginActivity" />
    </data>


    <RelativeLayout
        android:id="@+id/searchmessicservice_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/searchmessicservice_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_launcher" />

        <View
            android:id="@+id/searchmessicservice_item_hostname_vstatus"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/searchmessicservice_item_hostname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/searchmessicservice_item_icon"
            android:layout_toEndOf="@+id/searchmessicservice_item_icon"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/searchmessicservice_item_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/searchmessicservice_item_icon"
            android:layout_toEndOf="@+id/searchmessicservice_item_icon"
            android:layout_toStartOf="@+id/searchmessicservice_item_version"
            android:minWidth="100dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/searchmessicservice_item_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/searchmessicservice_item_ip"
            android:layout_alignBottom="@+id/searchmessicservice_item_ip"
            android:layout_alignParentEnd="true"

            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    </RelativeLayout>
</layout>