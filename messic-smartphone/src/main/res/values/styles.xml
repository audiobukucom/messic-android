    </style>

    <style name="messic_tablayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/messic_tab_testappearance</item>
    </style>

    <style name="messic_tab_testappearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="messic_description_body">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="messic_button" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#777777</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/messic_button</item>
    </style>

    <style name="messic_button_warning" parent="@style/messic_button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/messic_button_red</item>
    </style>

    <style name="messic_field_title">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
