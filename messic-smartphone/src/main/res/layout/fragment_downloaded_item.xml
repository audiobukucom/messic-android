<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="events"
            type="org.messic.android.smartphone.activities.main.fragments.downloaded.DownloadedFragment" />
    </data>


    <RelativeLayout
        android:id="@+id/downloaded_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <ImageButton
            android:id="@+id/downloaded_ibBackground"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_margin="0dp"
            android:background="@drawable/messic_button_icon"
            android:padding="0dp" />


        <ImageView
            android:id="@+id/downloaded_icover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/downloaded_tauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/downloaded_icover"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/downloaded_ivmore"
            android:layout_toRightOf="@+id/downloaded_icover"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:text="Small Text with some appareances of the test"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#444444"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/downloaded_talbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/downloaded_tauthor"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/downloaded_tauthor"
            android:ellipsize="end"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4444FF"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/downloaded_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/downloaded_icover"
            android:layout_alignTop="@+id/downloaded_icover"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:alpha="0.5"
            android:background="@drawable/messic_button_icon"
            android:src="@drawable/ic_play_circle_outline_white_48dp" />

        <ImageButton
            android:id="@+id/downloaded_ivmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/messic_button_icon"
            android:src="@drawable/ic_more_vert_black_24dp" />

    </RelativeLayout>

</layout>