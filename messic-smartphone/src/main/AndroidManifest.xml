<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.messic.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:name=".MessicSmartphoneApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/messicTheme">

        <activity
            android:name=".activities.splashscreen.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.login.LoginActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".activities.welcome.WelcomeActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".activities.searchmessicservice.SearchMessicServiceActivity"
            android:parentActivityName=".activities.login.LoginActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".activities.searchmanualmessicservice.SearchManualMessicServiceActivity"
            android:parentActivityName=".activities.searchmessicservice.SearchMessicServiceActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".activities.main.MainActivity"
            android:parentActivityName=".activities.login.LoginActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".activities.albuminfo.AlbumInfoActivity"
            android:parentActivityName=".activities.main.MainActivity"
            android:screenOrientation="userPortrait" />

    </application>

</manifest>
